@using Service

<MudDialog>
    <TitleContent>
        <MudStack AlignItems="AlignItems.Center" Row>
            <MudIcon Size="Size.Small" Color="Color.Primary" Icon="@Icons.Material.Filled.EditNote"></MudIcon>
            <MudText Typo="Typo.caption">Change Password</MudText>
        </MudStack>
    </TitleContent>
    <DialogContent>
        <MudGrid Spacing="1">
            <MudItem Class="mb-4" xs="12">
                <MudTextField T="string" Variant="Variant.Outlined" Margin="Margin.Dense" Label="Current Password" ShrinkLabel></MudTextField>
            </MudItem>
            <MudItem xs="12">
                <MudTextField T="string" Variant="Variant.Outlined" Margin="Margin.Dense" Label="New Password" ShrinkLabel></MudTextField>
            </MudItem>
            <MudItem xs="12">
                <MudTextField T="string" Variant="Variant.Outlined" Margin="Margin.Dense" Label="Confirm password" ShrinkLabel></MudTextField>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudStack Justify="Justify.FlexEnd" Row>
            <MudButton Size="Size.Small" Variant="Variant.Text">Cancel</MudButton>
            <MudButton Size="Size.Small" Variant="Variant.Filled" Color="Color.Primary">Change</MudButton>
        </MudStack>
    </DialogActions>
</MudDialog>

@code {
    [Inject] public AppStateService AppStateService { get; set; } = null!;
}